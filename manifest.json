{
    "manifest_version": 3,
    "name": "Maze Tracker",
    "version": "1.0",
    "description": "Tracks JavaScript used to solve Blockly Maze levels.",
    "action": {
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://blockly.games/maze*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}