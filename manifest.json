{
    "manifest_version": 3,
    "name": "Maze Tracker",
    "version": "1.0",
    "description": "Tracks JS lines in Blockly Maze",
    "permissions": [
        "storage",
        "sidePanel",
        "tabs"
    ],
    "icons": {
        "16": "icons/maze_16.png",
        "32": "icons/maze_32.png",
        "48": "icons/maze_48.png",
        "128": "icons/maze_128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://blockly.games/maze*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}